// Calculate values w/ system multipliers, for simulation
RULE ZnSys:ClgOAFlowCapSim
  DESCRIPTION
    "The outside air flow rate when system is in cooling mode,
     for simulation."
  INPUTCLASS
    NotInput
  UNITS
    cfm
  SIZING
    if( IfValidAnd( ClgOAFlowCap >= 0 ) )
    then ClgOAFlowCap * Cnt
    else UNDEFINED
    endif
  ANNUAL
    if( IfValidAnd( ClgOAFlowCap >= 0 ) )
    then ClgOAFlowCap * Cnt
    else UNDEFINED
    endif
ENDRULE

