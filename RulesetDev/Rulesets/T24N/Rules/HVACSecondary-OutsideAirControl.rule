// ********** IsAllOutsideAir **************************************
RULE AirSys:IsAllOA
  DESCRIPTION
    "A flag indicating that the system is designed to be a 100% OA system."
  HELP
    "If set to 1, the program will control the system to provide 100% OA at
     all times. It is defaulted to 1 for DOAS system types, and set to 1 if
     the design ventilation air flow is within 3 percent of the system
     airflow."
  INPUTCLASS
    Default
  DEFAULT  
    if( Type = "DOASCV" .OR. Type = "DOASVAV" )
    then 1
    else 0
    endif
  CHECKCODE
    if( ( Type = "DOASCV" .OR. Type = "DOASVAV" ) .AND. IsAllOA = 0 )
    then
      PostWarning("AirSystem '%s' is a DOAS system but has not been defined
                   as a 100% OA system ( IsAllOA = 0 ). For compliance, this
                   system will be modeled as 100% OA. If the propsed design
                   is not a 100% OA system select a different system type.", Name)
    else UNCHANGED
    endif
  SIZING : T24N_2016
    if( Type = "DOASCV" .OR. Type = "DOASVAV" )
    then 1
    else
    if( IsPropSys > 0 )
    then IsAllOA
    else 0
    endif endif
  SIZING
    if( BaseSysNum = 12 )
    then 1 // Basline lab system is 100% OA
    else
    if( Type = "DOASCV" .OR. Type = "DOASVAV" )
    then 1
    else
    if( IsPropSys > 0 )
    then
      if( AirSys:SysOARat > ( 1 - Proj:OATolLim ) )
      then 1
      else IsAllOA
      endif
    else 0
    endif endif endif
  SIZING : T24N_2016
    UNCHANGED
  ANNUAL
    if( BaseSysNum > 0 )
    then
      if( AirSys:SysOARat > ( 1 - Proj:OATolLim ) )
      then 1
      else UNCHANGED
      endif
    else UNCHANGED
    endif
ENDRULE

RULE ZnSys:IsAllOA
  DESCRIPTION
    "A flag indicating that the system is designed to be a 100% OA system."
  INPUTCLASS
    NotInput
  DEFAULT
    if( SysOARat >= ( 1 - Proj:OATolLim ) )
    then 1
    else 0
    endif
ENDRULE


