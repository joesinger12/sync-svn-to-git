        SumChildrenIf( CoilClg:CapTotNetRtd, CoilClg:CndsrType = "Air" ) > 0 .AND. 
        Proj:StdsVersionYr >= 2019 .AND. 
        IfValidAnd( UnitaryCat != "NA" ) .AND.
