RULE NEW AirSys:SysVentFlowUncorrected
  DATATYPE
    Float
  LONGFORM
    SystemVentilationFlowUncorrected
  DESCRIPTION
    "The design outside air flow of the AirSytem, uncorrected for system
     ventilation efficiency (Vou)."
  HELP
    ""
  INPUTCLASS 
    NotInput         
  UNITS 
    cfm
  REPORTPRECISION
    0
  DEFAULT
    if( ServesResZn > 0 )
    then SumRevRef( ResOtherZn:ActiveHVACSystem, ResOtherZn:TotalIAQCFM )
    else SumRevRef( ThrmlZn:VentSysRef, ThrmlZn:VentFlowWithMult ) / Cnt
    endif 
  SIZING
    if( ServesResZn > 0 )
    then
      if( BaseSysNum > 0 )
      then SumRevRef( ResOtherZn:ActiveHVACSystem, ResOtherZn:MinIAQCFM )
      else SumRevRef( ResOtherZn:ActiveHVACSystem, ResOtherZn:TotalIAQCFM )
      endif
    else SumRevRef( ThrmlZn:VentSysRef, ThrmlZn:VentFlowWithMult ) / Cnt
    endif 
  ANNUAL
    if( ServesResZn > 0 )
    then
      if( BaseSysNum > 0 )
      then SumRevRef( ResOtherZn:ActiveHVACSystem, ResOtherZn:MinIAQCFM )
      else SumRevRef( ResOtherZn:ActiveHVACSystem, ResOtherZn:TotalIAQCFM )
      endif
    else SumRevRef( ThrmlZn:VentSysRef, ThrmlZn:VentFlowWithMult ) / Cnt
    endif 
