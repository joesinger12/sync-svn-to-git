// ==================== COOLING ================================================
RULE ThrmlZn:ClgDsgnSizingFac
  DESCRIPTION
    "The factor used to adjust the design cooling air flow. 
     Applicable to sizing runs only."
  HELP
    "For EnergyPlus, this property translates to Sizing:Zone, 
     ! - Zone Cooling Sizing Factor."
  INPUTCLASS 
    Optional
  MINIMUM
    1.0
  COMMONMAXIMUM
    1.5
  DEFAULT
    if( IsCond > 0 )
    then
      if( IfValidAnd( Proj:HVACAutoSizing > 0 ) .AND. 
          LocalCompAssigned( PriAirCondgSysRef[1] ) )
      then PriAirCondgSysRef[1]:ClgSizingRat
      else 1.0
      endif
    else UNDEFINED
    endif
  SIZING
    if( IsCond > 0 )
    then
      if( BaseSysNum > 0 .OR. AddClgToProp > 0 )
      then 1.0
      else
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND. 
          LocalCompAssigned( PriAirCondgSysRef[1] ) )
      then PriAirCondgSysRef[1]:ClgSizingRat
      else 1.0
      endif endif
    else UNDEFINED
    endif
  ANNUAL
    if( IsCond > 0 )
    then
      if( BaseSysNum > 0 .OR. AddClgToProp > 0 )
      then 1.0
      else
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) )
      then z:ClgDsgnSizingFac
      else 1.0
      endif endif
    else UNDEFINED
    endif
ENDRULE
RULE ThrmlZn:ClgDsgnFlow
  DESCRIPTION
    "The air flow provided to the thermal zone at the design cooling condition.  
     Applicable to sizing runs only."
// Calculated from z:ClgDsgnFlowSim. This value reflects zone multipliers, 
// so SDD reported value is divided by ThrmlZn:Mult
  INPUTCLASS 
    Optional
  SIZING
    if( IsCond > 0 )
    then
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND.
          IfValidAnd( ClgDsgnFlow > 0 ) )
      then ClgDsgnFlow
      else UNDEFINED
      endif
    else UNDEFINED
    endif
  ANNUAL  
    if( IsCond > 0 )
    then
      if( ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) .AND.
          IfValidAnd( z:ClgDsgnFlowSim >= 0 ) )
      then z:ClgDsgnFlowSim / Mult
      else
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND.
          IfValidAnd( ClgDsgnFlow > 0 ) )
      then z:ClgDsgnFlow
      else UNDEFINED
      endif endif
    else UNDEFINED
    endif
ENDRULE
RULE ThrmlZn:ClgDsgnFlowSim
  DESCRIPTION
    "The air flow provided to the thermal zone at the design cooling conditions,
     For simulation only, includes zone multipliers."  
  HELP
    "Used only for bi-directional communication with simulation engine."
  INPUTCLASS 
    NotInput
//SIZING
    // Autosize
    // Source for Autosize data:
    // E+ Report: HVAC Sizing Summary -> Zone Cooling -> Calculated Design Air Flow
    // This simulation value includes zone multipliers 
  SIZING
    if( IsCond > 0 )
    then
      if( BaseSysNum > 0 .OR. AddClgToProp > 0 )
      then UNDEFINED
      else
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND.
          IfValidAnd( ClgDsgnFlow > 0 ) )
      then ClgDsgnFlow * Mult
      else UNDEFINED
      endif endif
    else UNDEFINED
    endif  
  ANNUAL
    if( IsCond > 0 )
    then
      if( BaseSysNum > 0 .OR. AddClgToProp > 0 )
      then UNDEFINED
      else
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND.
          IfValidAnd( ClgDsgnFlow > 0 ) )
      then ClgDsgnFlow * Mult
      else UNDEFINED
      endif endif
    else UNDEFINED
    endif
ENDRULE
RULE ThrmlZn:ClgDsgnSupAirTempDiff
  DESCRIPTION
    "The temperature difference between the cooling supply air temperature
     and room air temperature used for sizing zone/system air flows." 
  HELP
    "This value, combined with the design zone temperature setpoint, is used to 
     calculated the default design supply air temperature."
  REFERENCE 
    NACM Section 5.6.5.1
    NACM Section 5.7.2.3
  INPUTCLASS 
    Default
  MINIMUM
    3
  COMMONMAXIMUM
    21
  MAXIMUM
    40
  DEFAULT : T24N
    if( IsCond > 0 .AND. LocalCompAssigned( PriAirCondgSysRef[1] ) )
    then
;      if( IsExtZn > 0 )
;      then 20
;      else 15
;      endif
      if( IfValidAnd( HasNoClg > 0 ) )
      then UNDEFINED
      else if( LocalCompAssigned( PriAirCondgSysRef[1] ) = ComponentType( "ZnSys" ) )
      then 20
      else if( PriAirCondgSysRef[1]:IsMultiZnSys )
      then
        if( IsExtZn = 0 )
        then 15
        else 20
        endif
      else 20
      endif endif endif
    else UNDEFINED
    endif
  DEFAULT : S901G ECBC
    if( IfValidAnd( HasClg > 0 ) )
    then 20
    else UNDEFINED
    endif
  SIZING : T24N_2013 T24N_2016 T24N_2019
    if( IsCond > 0 .AND. ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) )
    then
;      if( IsExtZn > 0 )
;      then 20
;      else 15
;      endif
      if( zp:HtgOnlySysArea > 0 .OR. HasNoClg > 0 )
      then // Dummy value for calculating cooling zone air flow for heating only systems
           // If not specified, and there is no vent air, sizing sim will crash
        20 
      else
      if( ( IfValidAnd( BaseSysNum = 5 ) .OR. 
            IfValidAnd( BaseSysNum = 6 ) ) .AND.
          IsExtZn = 0 )
      then // Core zones of VAV baseline are sized for 15F deltaT
        15 
      else
      if( IfValidAnd( BaseSysNum = 1 ) .AND. 
          IfValidAnd( Proj:ResBaseSysChange > 0 ) )
      then // Was 15F for 2019.1.2 release, changed back to 20 for 1.3, see ticket 2691/3212
        20
      else // 20F for all single zone systems, see GC issue 857
        20 
      endif endif endif
    else if( zp:HtgOnlySysArea > 0 )
    then // Dummy value for calculating cooling zone air flow for heating only systems
         // If not specified, and there is no vent air, sizing sim will crash
      20 
    else ClgDsgnSupAirTempDiff
    endif endif
  SIZING : T24N
    if( IsCond > 0 .AND. ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) )
    then
      if( zp:HtgOnlySysArea > 0 .OR. HasNoClg > 0 )
      then // Dummy value for calculating cooling zone air flow for heating only systems
           // If not specified, and there is no vent air, sizing sim will crash
        20 
      else
      if( ( IfValidAnd( BaseSysNum = 5 ) .OR.
            IfValidAnd( BaseSysNum = 6 ) ) .AND.
          IsExtZn = 0 )
      then // Core zones of VAV baseline are sized for 15F deltaT
        15 
      else
      if( IfValidAnd( BaseSysNum = 10) .OR.
          IfValidAnd( BaseSysNum = 11) )
      then // computer room baseline are sized for 15F deltaT for economizer requirement, see ticket 3320
        15
      else
      if( IfValidAnd( BaseSysNum = 1 ) .AND. 
          IfValidAnd( Proj:ResBaseSysChange > 0 ) )
      then // Was 15F for 2019.1.2 release, changed back to 20 for 1.3, see ticket 2691/3212
        20
      else // 20F for all single zone systems, see GC issue 857
        20 
      endif endif endif endif
    else if( zp:HtgOnlySysArea > 0 )
    then // Dummy value for calculating cooling zone air flow for heating only systems
         // If not specified, and there is no vent air, sizing sim will crash
      20 
    else ClgDsgnSupAirTempDiff
    endif endif
  SIZING : S901G ECBC
    if( IsCond > 0 .AND. ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) )
    then 
      if( zp:HtgOnlySysArea > 0 .OR. HasNoClg > 0 )
      then UNDEFINED
      else 20
      endif
    else if( zp:HtgOnlySysArea > 0 )
    then UNDEFINED      
    else ClgDsgnSupAirTempDiff
    endif endif
  ANNUAL
    z:ClgDsgnSupAirTempDiff
ENDRULE
RULE ThrmlZn:ClgDsgnSupAirTemp
  DESCRIPTION
    "The design cooling supply air temperature for sizing zone/system air flows." 
  HELP
    "For EnergyPlus, this property translates to Sizing:Zone, 
     ! - Zone Cooling Design Supply Air Temperature, and is used for sizing with
     ! - Zone Cooling Design Supply Air Temperature Input Method = SupplyAirTemperature."
  REFERENCE 
    NACM Section 5.6.5.1
    NACM Section 5.7.2.3
  INPUTCLASS 
    Default
  MINIMUM
    50
  COMMONMINIMUM
    54
  COMMONMAXIMUM
    66
  MAXIMUM
    75
  DEFAULT : T24N
    if( IsCond > 0 .AND. LocalCompAssigned( PriAirCondgSysRef[1] ) )
    then
      if( IfValidAnd( HasNoClg > 0 ) )
      then UNDEFINED
      else if( IsRes .OR. IsResCommon )
      then 58
      else if( CompRmArea > 0 )
      then 60
      else if( LocalCompAssigned( PriAirCondgSysRef[1] ) = ComponentType( "ZnSys" ) )
      then 55
      else if( PriAirCondgSysRef[1]:IsMultiZnSys .AND. IsExtZn = 0 )
      then 60
      else 55
      endif endif endif endif endif
    else UNDEFINED
    endif
  DEFAULT : S901G ECBC
    if( IsCond > 0 )
    then
      if( HasClg = 0 )
      then UNDEFINED
      else ValidOr( ClgTstatSchMinVal, 75) - ValidOr( ClgDsgnSupAirTempDiff, 0 )
      endif
    else UNDEFINED
    endif
// TO DO: Uncomment when Research mode is supported
; CHECKSIM
;   if( Proj:HVACAutoSizing = 1 .AND. 
;       IsCond .AND.
;       LocalStatus( ClgDsgnSupAirTemp ) = 0 )
;   then 
;     PostError("The CoolingDesignSupplyAirTemperature for ThermalZone '%s' is 
;                a required input if AutoSizing HVAC equipment.")
;   else UNCHANGED
;   endif
  SIZING : T24N_2013 T24N_2016 T24N_2019
    if( IsCond > 0 .AND. ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) .AND.
        LocalStatus( PredominantFuncGrp ) > 0 )
    then
      if( zp:HtgOnlySysArea > 0 .OR. HasNoClg > 0 )
      then UNDEFINED      
      else if( CompRmAreaNew > 0 .OR. CompRmAreaAltered > 0 )
      then 60
      else DsgnTStatSetpt:MinClgSetpt("SchGrpName", PredominantFuncGrp) -
           ClgDsgnSupAirTempDiff
      endif endif
    else if( zp:HtgOnlySysArea > 0 )
    then UNDEFINED    
    else ClgDsgnSupAirTemp
    endif endif
  SIZING : T24N
    if( IsCond > 0 .AND. ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) .AND.
        LocalStatus( PredominantFuncGrp ) > 0 )
    then
      if( zp:HtgOnlySysArea > 0 .OR. HasNoClg > 0 )
      then UNDEFINED      
      else
      if( CompRmAreaNew > 0 .OR. CompRmAreaAltered > 0 )
      then 65 // computer room baseline are sized for 65F for economizer requirement, see ticket 3320
      else
      if( FuncGrpArea24Hr > 0 )
      then DsgnTStatSetpt:MinClgSetpt("SchGrpName", "AllOn")
      else DsgnTStatSetpt:MinClgSetpt("SchGrpName", PredominantFuncGrp) -
           ClgDsgnSupAirTempDiff
      endif endif endif
    else if( zp:HtgOnlySysArea > 0 )
    then UNDEFINED    
    else ClgDsgnSupAirTemp
    endif endif
  SIZING : S901G ECBC
    if( IsCond > 0 .AND. ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) )
    then
      if( zp:HtgOnlySysArea > 0 )
      then UNDEFINED 
      else ValidOr( ClgTstatSchMinVal, 75) - ValidOr( ClgDsgnSupAirTempDiff, 0 )
      endif
    else if( zp:HtgOnlySysArea > 0 )
    then UNDEFINED      
    else ClgDsgnSupAirTemp
    endif endif
  ANNUAL 
    z:ClgDsgnSupAirTemp
ENDRULE

