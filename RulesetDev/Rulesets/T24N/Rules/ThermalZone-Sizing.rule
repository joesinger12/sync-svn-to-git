    Prescribed
  SIZING
    if( IsCond > 0 )
    then
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND.
          IfValidAnd( ClgDsgnFlow > 0 ) )
      then ClgDsgnFlow
      else UNDEFINED
      endif
    else UNDEFINED
    endif
  ANNUAL  
    if( IsCond > 0 )
    then
      if( ( BaseSysNum > 0 .OR. AddClgToProp > 0 ) .AND.
          IfValidAnd( z:ClgDsgnFlowSim >= 0 ) )
      then z:ClgDsgnFlowSim / Mult
      else
      if( IfValidAnd( u:Proj:HVACAutoSizing > 0 ) .AND.
          IfValidAnd( ClgDsgnFlow > 0 ) )
      then z:ClgDsgnFlow
      else UNDEFINED
      endif endif
    else UNDEFINED
    endif
ENDRULE
