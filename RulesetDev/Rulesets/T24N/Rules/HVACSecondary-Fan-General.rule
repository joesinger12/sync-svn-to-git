RULE AirSys:SupFanCap
  DESCRIPTION
    "The total supply fan capacity of the AirSystem"
  INPUTCLASS
    NotInput
  UNITS 
    cfm
  REPORTPRECISION
    0
  DEFAULT
    SumChildrenIf( AirSeg:FanFlowCap, AirSeg:Type = "Supply" )
  SIZING
    SumChildrenIf( AirSeg:FanFlowCap, AirSeg:Type = "Supply" )
  ANNUAL
    SumChildrenIf( AirSeg:FanFlowCap, AirSeg:Type = "Supply" )
