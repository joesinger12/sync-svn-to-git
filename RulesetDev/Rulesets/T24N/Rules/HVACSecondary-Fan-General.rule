// SystemType set to property of local component, for screens, rules etc
RULE NEW Fan:IsSupFan
  DATATYPE
    Integer
  LONGFORM
    IsSupplyFan
  DESCRIPTION
    "A flag that indicates the fan is for supply."
  INPUTCLASS 
    NotInput 
  DEFAULT
    if( ParentComp = "AirSys" )
    then 
      if( AirSys:IsExhSys > 0 )
      then 0
      else
      if( AirSeg:Type = "Supply" )
      then 1
      else 0
      endif endif
    else 
    if( ParentComp = "ZnSys" )
    then
      if( ZnSys:IsExhSys > 0 )
      then 0
      else 1
      endif
    else 0
    endif endif
  SIZING
    if( ParentComp = "AirSys" )
    then 
      if( AirSys:IsExhSys > 0 )
      then 0
      else
      if( AirSeg:Type = "Supply" )
      then 1
      else 0
      endif endif
    else 
    if( ParentComp = "ZnSys" )
    then
      if( ZnSys:IsExhSys > 0 )
      then 0
      else 1
      endif
    else 0
    endif endif
ENDRULE

